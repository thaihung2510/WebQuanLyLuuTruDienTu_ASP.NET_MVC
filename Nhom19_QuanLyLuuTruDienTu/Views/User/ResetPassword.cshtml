@model Nhom19_QuanLyLuuTruDienTu.models.ResetPasswordModel
@{
    ViewBag.Title = "ResetPassword";
    Layout = "";

}

<link href="~/Content/Login.css" rel="stylesheet" />
<div class="animated bounceInDown">
    <div class="container" style="height:650px;">
        <span class="error animated tada" id="msg"></span>
        @using (Html.BeginForm("ResetPassword", "User", FormMethod.Post, new { @class = "box" }))
        {
            @Html.AntiForgeryToken()

            <form name="form1" class="box" action="">
                <h4>FileFate<span></span></h4>
                <h5>Thay đổi mật khẩu mới</h5>
                <h5 style="display:inline">Nhập mật khẩu mới</h5>
                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                <h5 style="display:inline">Nhập lại mật khẩu</h5>
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                @Html.HiddenFor(a => a.ResetCode)
                <p style="color:red;resize:15px;">@ViewBag.Message</p>
                <input type="submit" value="Đặt lại mật khẩu" class="btn1">
            </form>
        }
    </div>
    <div class="footer">
    </div>
</div>
